<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product.dao.ProductDao">

    <resultMap type="product.entity.Product" id="ProductMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="salePoint" column="sale_point" jdbcType="VARCHAR"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
        <result property="stock" column="stock" jdbcType="INTEGER"/>
        <result property="flag" column="flag" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProductMap">
        select
          id, name, price, sale_point, image, stock, flag, create_time, create_by, update_time, update_by
        from yuanchangliang.product
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProductMap">
        select
          id, name, price, sale_point, image, stock, flag, create_time, create_by, update_time, update_by
        from yuanchangliang.product
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ProductMap">
        select
        id, name, price, sale_point, image, stock, flag, create_time, create_by, update_time, update_by
        from yuanchangliang.product
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="salePoint != null and salePoint != ''">
                and sale_point = #{salePoint}
            </if>
            <if test="image != null and image != ''">
                and image = #{image}
            </if>
            <if test="stock != null">
                and stock = #{stock}
            </if>
            <if test="flag != null">
                and flag = #{flag}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="createBy != null and createBy != ''">
                and create_by = #{createBy}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="updateBy != null and updateBy != ''">
                and update_by = #{updateBy}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into yuanchangliang.product(name, price, sale_point, image, stock, flag, create_time, create_by, update_time, update_by)
        values (#{name}, #{price}, #{salePoint}, #{image}, #{stock}, #{flag}, #{createTime}, #{createBy}, #{updateTime}, #{updateBy})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update yuanchangliang.product
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="salePoint != null and salePoint != ''">
                sale_point = #{salePoint},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="stock != null">
                stock = #{stock},
            </if>
            <if test="flag != null">
                flag = #{flag},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="createBy != null and createBy != ''">
                create_by = #{createBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from yuanchangliang.product where id = #{id}
    </delete>

</mapper>